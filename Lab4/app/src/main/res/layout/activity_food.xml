<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".FoodActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Food Order"
        app:titleTextColor="@color/white" />

    <RadioGroup
        android:id="@+id/rg_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:paddingStart="20dp">

        <RadioButton
            android:id="@+id/rb_food1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phở Hà Nội" />

        <RadioButton
            android:id="@+id/rb_food2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bún Bò Huế" />

        <RadioButton
            android:id="@+id/rb_food3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mì Quảng" />

        <RadioButton
            android:id="@+id/rb_food4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủ Tíu Sài Gòn" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_orderFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button"
        android:text="Đặt món"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/txtErrorFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp" />
</LinearLayout>